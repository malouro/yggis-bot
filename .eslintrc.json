{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": "airbnb-base",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"rules": {
		"no-tabs": 0,
		"indent": [ "error", "tab" ],
		"semi": [ "error", "never" ],
		"implicit-arrow-linebreak": 0
	}
}
