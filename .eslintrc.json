{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "airbnb-base",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"semi": [
			"error",
			"never"
		],
		"no-tabs": 0,
		"class-methods-use-this": 0,
		"consistent-return": 0,
		"implicit-arrow-linebreak": 0,
		"newline-after-var": [
			"error",
			"always"
		],
		"import/prefer-default-export": 0
	}
}
